<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="id.ac.itats.skripsi.routingengine.limasatu"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />

    <uses-sdk
        android:minSdkVersion="9"
        android:targetSdkVersion="18" />

    <application
        android:name="id.ac.itats.skripsi.routingengine.limasatu.RoutingEngine"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="id.ac.itats.skripsi.routingengine.limasatu.BasicMapViewer"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service android:name="id.ac.itats.skripsi.routingengine.limasatu.GraphService" >
        </service>

        <activity
            android:name="id.ac.itats.skripsi.routingengine.limasatu.TestActivity"
            android:label="@string/title_activity_test" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <!-- Enabling Search Dialog -->
            <meta-data
                android:name="android.app.default_searchable"
                android:value="id.ac.itats.skripsi.routingengine.limasatu.SearchActivity" />
        </activity>

        <!-- A Searchable activity, that handles the searches -->
        <activity android:name="id.ac.itats.skripsi.routingengine.limasatu.SearchActivity" >
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>

            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
        </activity>
        <!-- Activity that shows the country details -->
        <activity android:name="id.ac.itats.skripsi.routingengine.limasatu.PlaceActivity" />
        
         <!-- Content Provider to query sqlite database -->
        <provider
            android:name="id.ac.itats.skripsi.search.PlaceContentProvider"
            android:authorities="id.ac.itats.skripsi.search.PlaceContentProvider"
            android:exported="true" />
    </application>

</manifest>